{
  "name": "pixelgrid-browser-extension",
  "version": "0.4.0",
  "description": "",
  "scripts": {
    "build": "cross-env NODE_ENV=production TARGET=chrome webpack --mode production",
    "build:chrome": "cross-env-shell NODE_ENV=production TARGET=chrome webpack --mode production",
    "build:firefox": "cross-env-shell NODE_ENV=production TARGET=firefox webpack --mode production",
    "build:opera": "cross-env-shell NODE_ENV=production TARGET=opera webpack --mode production",
    "build:edge": "cross-env-shell NODE_ENV=production TARGET=edge webpack --mode production",
    "package:all": "cross-env NODE_ENV=production npm run build:chrome && node ./chrome-package.js && npm run build:firefox && node ./firefox-package.js &&  npm run build:opera && node ./opera-package.js && npm run build:edge && node ./edge-package.js",
    "package:chrome": "cross-env NODE_ENV=production TARGET=chrome npm run build:chrome && node ./chrome-package.js",
    "package:firefox": "cross-env NODE_ENV=production TARGET=firefox npm run build:firefox && node ./firefox-package.js",
    "package:opera": "cross-env NODE_ENV=production TARGET=opera npm run build:opera && node ./opera-package.js",
    "package:edge": "cross-env NODE_ENV=production TARGET=edge npm run build:edge && node ./edge-package.js",
    "start": "cross-env NODE_ENV=development TARGET=chrome webpack-dev-server --mode development --open",
    "start:options": "cross-env NODE_ENV=development TARGET=chrome APP=options webpack-dev-server --mode development --open",
    "test": "jest",
    "lint": "tslint -c ./tslint.json './src/**/*.ts*'",
    "format-check": "prettier --check \"src/**/*.ts*\"",
    "format": "prettier --write \"src/**/*.ts*\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pixel-grid/chrome-extension.git"
